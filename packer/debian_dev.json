{
  "variables": {
    "image_version": "0.1.0",
    "debian_version": "9.2.1"
  },

  "builders": [{
    "type": "virtualbox-iso",
    "boot_command": [
      "<esc><wait>",
      "install <wait>",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed_jessie.cfg <wait>",
      "debian-installer=en_US <wait>",
      "auto <wait>",
      "locale=en_US <wait>",
      "kbd-chooser/method=us <wait>",
      "keyboard-configuration/xkb-keymap=us <wait>",
      "netcfg/get_hostname={{ .Name }} <wait>",
      "netcfg/get_domain=vagrantup.com <wait>",
      "fb=false <wait>",
      "debconf/frontend=noninteractive <wait>",
      "console-setup/ask_detect=false <wait>",
      "console-keymaps-at/keymap=us <wait>",
      "<enter><wait>"
    ],

    "boot_wait": "10s",
    "disk_size": 8000,

    "guest_os_type": "Debian_64",
    "http_directory": "http",

    "iso_checksum_type": "sha512",
    "iso_checksum_url": "http://cdimage.debian.org/cdimage/release/{{user `debian_version`}}/amd64/iso-cd/SHA512SUMS",
    "iso_url": "http://cdimage.debian.org/cdimage/release/{{user `debian_version`}}/amd64/iso-cd/debian-{{user `debian_version`}}-amd64-netinst.iso",

    "ssh_port": 22,
    "ssh_username": "krogebry",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",

    "shutdown_command": "echo 'krogebry'|sudo -S /sbin/shutdown -hP now",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",

    "vm_name": "krogebry-dev-{{user `image_version`}}",
    "export_opts": [
      "--manifest",
      "--vsys", "0",
      "--description", "Debian - {{user `debian_version`}}",
      "--version", "{{user `version`}}"
    ],

    "vboxmanage": [
      [ "modifyvm", "{{.Name}}", "--cpus", "4" ],
      [ "modifyvm", "{{.Name}}", "--nic1", "nat" ],
      [ "modifyvm", "{{.Name}}", "--nic2", "hostonly", "--hostonlyadapter2", "vboxnet0" ],
      [ "modifyvm", "{{.Name}}", "--audio", "none" ],
      [ "modifyvm", "{{.Name}}", "--memory", "4096" ]
    ]
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'krogebry' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
        "scripts/bootstrap.sh",
        "scripts/dev_workstation.sh",
        "scripts/docker.sh",
        "scripts/docker_compose.sh",
        "scripts/vbox.sh",
        "scripts/vbaddguest.sh",
        "scripts/networking.sh",
        "scripts/cleanup.sh"
    ]
  },{
    "type": "file",
    "source": "scripts/rvm.sh",
    "destination": "/home/krogebry/rvm.sh"
  }]
}
